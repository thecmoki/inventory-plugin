<div style = "width: 50%">
	<div class = "contextual">
		<%= link_to(addAmortnorm(session[:lan]), amortnorms_new_path, :class => "icon icon-add") %>
	</div>
	<h2><%= amortnormHeader(session[:lan]) %></h2>
	<div class = "autoscroll">
		<table class = "list">
			<thead>
				<tr>
					<th>ID</th>
					<th><%= amortnormName(session[:lan]) %></th>
					<th><%= amortnormComment(session[:lan]) %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @amortnorms.each do |amortnorm| %>
					<tr class = "<%= cycle('user active odd', 'user active even') -%> user">
						<td><%= amortnorm.id %></td>
						<td><%= amortnorm.name %></td>
						<td><%= amortnorm.comment%></td>
						<td class = "buttons">
							<%= link_to(editAmortnorm(session[:lan]), rooms_edit_path(:id => amortnorm.id), :class => "icon icon-edit") %>
							<%= link_to(deleteAmortnorm(session[:lan]), rooms_destroy_path(:id => amortnorm.id), :method => :delete, :class => "icon icon-del", data: dataConfirm(session[:lan])) %>
						</td>	
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'style', :plugin => 'regjistrimi_inventarit' %>
<% end %>