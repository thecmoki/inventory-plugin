<table border = "1">
	<thead>
		<tr>
			<th>ID</th>
			<th>Kategoria</th>
			<th>Emri</th>
			<th>Sasia</th>
			<th>Ngjyra</th>
			<th>Komenti</th>
			<th>Operacionet</th>
		</tr>
	</thead>

	<tbody>
		<% @units.each do |unit| %>
			<tr>
					<td><%= unit.id %></td>
					<td><% @categories.each do |c| %>
						<% if unit.category_id == c.id %>
							<%= c.name %>
						<%end%>
					<%end%>
					</td>
					<td><%= unit.name %></td>
					<td><%= unit.quantity %></td>
					<td><%= unit.color %></td>
					<td><%= unit.comment %></td>
					<td><%= link_to("Show", units_show_path(:id => unit.id)) %> | <%= link_to("Edit", units_edit_path(:id => unit.id))%> | <%= link_to("Delete", units_destroy_path(:id => unit.id), :method => :delete) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<p><%= link_to("Shto Unit", :controller => "units", :action => "new") %></p>
