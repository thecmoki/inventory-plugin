<div class ="permbajtja">
<h2>Kategorite e Inventarit</h2>
<table border ="1">
  <thead>
  	<tr>
  		<th>Kategori ID</th>
  		<th>Kategoria</th>
  		<th>Komenti</th>
  		<th>Ndryshimet</th>
  		</tr>
	
  </thead>
  	<tbody>
  		
  	<% @categories.each do |categories| %>
  		<tr>
  			<td><%= categories.id %></td>
  			<td><%= categories.name%></td>
  			<td><%= categories.comment %></td>
  			<td><%= link_to("Show", "categories/#{categories.id}") %> | <%= link_to("Edit", "categories/#{categories.id}/edit") %> | <%= link_to("Delete", "categories/#{categories.id}/destroy", :method => :delete) %></td>
  			</tr>
  			<%end%>


  	</tbody>

</table>

<p><%= button_to("Shto Kategori", categories_new_path, :method => "get") %></p>
</div>
<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'style', :plugin => 'regjistrimi_inventarit' %>
<% end %>