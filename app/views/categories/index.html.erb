<div style = "width: 50%">
<% if(session[:id] == "en") %>
	<div class = "contextual">
		<%= link_to("Add Category", categories_new_path, :class => "icon icon-add") %>
	</div>
	<h2>Inventory Category</h2>
<% else %>
	<div>
		<%= link_to("Shto Kategori", categories_new_path, :class => "icon icon-add") %>
	</div>
	<h2>Kategorite e Inventarit</h2>
<% end %>
<div class = "autoscroll">
	<table class = "list">
		<thead>
			<tr>
				<th>ID</th>
				<th><%= name(session[:lan]) %></th>
				<th><%= comment(session[:lan]) %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |categories| %>
				<tr class = "<%= cycle('user active odd', 'user active even') -%> user">
					<td><%= categories.id %></td>
					<td><%= categories.name%></td>
					<td><%= categories.comment %></td>
					<td class = "buttons">
						<%= link_to("Edit", categories_edit_path(:id => categories.id), :class => "icon icon-edit") %> <%= link_to("Delete", categories_destroy_path(:id => categories.id), :method => :delete, :class => "icon icon-del", data: { confirm: 'Are you sure?' }) %></td>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>
</div>
<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'style', :plugin => 'regjistrimi_inventarit' %>
<% end %>