<div class = "contextual">
	<%= link_to(l(:addAmortnorm), amortnorms_new_path, :class => "icon icon-add") %>
</div>
<h2><%= l(:amortnormHeader) %></h2>
<div class = "tabs">
	<ul>
		<li><%= link_to(l(:goOverviews), overviews_path) %></li>
		<li><%= link_to(l(:goInventories), inventories_path) %></li>
		<li><%= link_to(l(:goUnits), units_path) %></li>
		<li><%= link_to(l(:goCategories), categories_path) %></li>
		<li><%= link_to(l(:goRooms), rooms_path) %></li>
		<li><%= link_to(l(:goLocations), locations_path) %></li>
		<li><%= link_to(l(:goAmortNorms), amortnorms_path, :onclick => "showTab('info', this.href); this.blur(); return false;", :id => "tab-info", :class => "selected") %></li>
		<li><%= link_to(l(:goHistories), histories_path) %></li>
	</ul>
</div>
<div style = "width: 50%">
	<div class = "autoscroll">
		<table class = "list">
			<thead>
				<tr>
					<th>ID</th>
					<th><%= l(:amortnormName) %></th>
					<th><%= l(:amortnormComment) %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @amortnorms.each do |amortnorm| %>
					<tr class = "<%= cycle('user active odd', 'user active even') -%> user">
						<td><%= amortnorm.id %></td>
						<td><%= amortnorm.name + " %"%></td>
						<td><%= amortnorm.comment%></td>
						<td class = "buttons">
							<%= link_to(l(:edit), amortnorms_edit_path(:id => amortnorm.id), :class => "icon icon-edit") %>
							<%= link_to(l(:delete), amortnorms_destroy_path(:id => amortnorm.id), :method => :delete, :class => "icon icon-del", data: { confirm: l(:dataConfirm) }) %>
						</td>	
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'style', :plugin => 'regjistrimi_inventarit' %>
<% end %>