<div class = "contextual">
	<%= link_to(l(:addCategory), categories_new_path, :class => "icon icon-add") %>
</div>
<h2><%= l(:categoryHeader) %></h2>
<div class = "tabs">
	<ul>
		<li><%= link_to(l(:goInventories), inventories_path) %></li>
		<li><%= link_to(l(:goUnits), units_path) %></li>
		<li><%= link_to(l(:goCategories), categories_path, :onclick => "showTab('info', this.href); this.blur(); return false;", :id => "tab-info", :class => "selected") %></li>
		<li><%= link_to(l(:goRooms), rooms_path) %></li>
		<li><%= link_to(l(:goAmortNorms), amortnorms_path) %></li>
		<li><%= link_to(l(:goHistories), histories_path) %></li>
	</ul>
</div>
<div style = "width: 50%">
	<div class = "autoscroll">
		<table class = "list">
			<thead>
				<tr>
					<th>ID</th>
					<th><%= l(:categoryName) %></th>
					<th><%= l(:categoryComment) %></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |category| %>
					<tr class = "<%= cycle('user active odd', 'user active even') -%> user">
						<td><%= category.id %></td>
						<td><%= category.name %></td>
						<td><%= category.comment %></td>
						<td class = "buttons">
							<%= link_to(l(:edit), categories_edit_path(:id => category.id), :class => "icon icon-edit") %>
							<%= link_to(l(:delete), categories_destroy_path(:id => category.id), :method => :delete, :class => "icon icon-del", data: { confirm: l(:dataConfirm) }) %>
						</td>	
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<% content_for :header_tags do %>
	<%= stylesheet_link_tag 'style', :plugin => 'regjistrimi_inventarit' %>
<% end %>