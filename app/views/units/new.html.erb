<h2><%= productPathNew(session[:lan]) %></h2>
<% if @unit.errors.any? %>
	<div id = "errorExplanation">
		<ul>
			<% @unit.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<div class = "splitcontentleft">
	<%= form_for(@unit) do |f| %>
		<fieldset class = "box tabular">
			<legend><%= productLegend1(session[:lan]) %></legend>
			<p>
				<%= f.label(productCategoryId(session[:lan])) %>
				<span class = "required">*</span>
				<%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true)%>
			</p>
			<p>
				<%= f.label(productName(session[:lan])) %>
				<span class = "required">*</span>
				<%= f.text_field(:name) %>
			</p>
		</fieldset>
		<fieldset class = "box tabular">
			<legend><%= productLegend2(session[:lan]) %></legend>
			<p>
				<%= f.label(productQuantity(session[:lan])) %>
				<%= f.text_field(:quantity) %>
			</p>
			<p>
				<%= f.label(productColor(session[:lan])) %>
				<%= f.text_field(:color) %>
			</p>
			<p>
				<%= f.label(productComment(session[:lan])) %>
				<%= f.text_area(:comment) %>
			</p>
		</fieldset>
		<p><%= f.submit(productNewSubmit(session[:lan])) %></p>
	<% end %>
<div>