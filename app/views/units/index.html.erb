<table border = "1">
	<thead>
		<tr>
			<th>ID</th>
			<th>Emri</th>
			<th>Komenti</th>
			<th>Operacionet</th>
		</tr>
	</thead>

	<tbody>
		<% @units.each do |unit| %>
			<tr>
					<td><%= unit.id %></td>
					<td><%= unit.name %></td>
					<td><%= unit.comment%></td>
					<td><%= link_to("Show", units_show_path(:id => unit.id)) %> | <%= link_to("Edit", units_edit_path(:id => unit.id))%> | <%= link_to("Delete", units_destroy_path(:id => unit.id), :method => :delete) %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<p><%= link_to("Shto Unit", :controller => "units", :action => "new") %></p>
